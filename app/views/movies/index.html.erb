<h1>Movies List</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th style="width:50%">Title</th>
      <th style="width:25%">Rating</th>
      <th style="width:25%">Release Date</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="3">Total Movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>
